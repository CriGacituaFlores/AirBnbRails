<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				Tus mensajes
			</div>
			<div class="panel-body">
			  <% @conversations.each do |conversation|%>
				 	<% other = conversation.sender == current_user ? conversation.recipient : conversation.sender %>

				 	<%= link_to conversation_messages_path(conversation) do %>
				 		<div class="row conversation">
				 			<div class="col-md-2">
				 			<%= image_tag avatar_url(other), class: 'img-circle avatar-medium' %>
				 			</div>
				 			<div class="col-md-2">
				 				<%= other.fullname %><br>
				 				<%= conversation.messages.last.message_time if conversation.messages.count > 0 %>
				 			</div>
				 			<div class="col-md-8">
				 				<%= conversation.messages.last.content %>
				 			</div>
				 		</div>
				 	<% end %>
			  <% end %>
			</div>
		</div>
	</div>
</div>